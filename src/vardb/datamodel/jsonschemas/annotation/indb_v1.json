{
    "definitions": {
        "count": {
            "type": "object",
            "patternProperties": {
                "[a-zA-Z0-9]*": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "freq": {
            "type": "object",
            "patternProperties": {
                "[a-zA-Z0-9]*": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1.0
                }
            }
        }
    },
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/root.json",
    "type": "object",
    "required": ["freq"],
    "optional": ["count", "filter", "custom", "hom", "num", "indications"],
    "additionalProperties": false,
    "properties": {
        "count": {
            "$ref": "#/definitions/count"
        },
        "freq": {
            "$ref": "#/definitions/freq"
        },
        "hom": {
            "$ref": "#/definitions/count"
        },
        "num": {
            "$ref": "#/definitions/count"
        },
        "filter": {
            "type": "object",
            "patternProperties": {
                "[a-zA-Z0-9]*": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "indications": {
            "patternProperties": {
                "[a-zA-Z0-9]*": {
                    "type": "object",
                    "patternProperties": {
                        "[a-zA-Z0-9]*": {
                            "type": "string",
                            "pattern": "[0-9]+"
                        }
                    }
                }
            }
        },
        "custom": {
            "patternProperties": {
                "[a-zA-Z0-9]*": {
                    "type": "string",
                    "pattern": ".*"
                }
            }
        }
    }
}
