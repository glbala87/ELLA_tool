{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask debugger",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/api/main.py",
                "DEVELOP": "true",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": ["run", "--no-debugger", "--no-reload", "--host=0.0.0.0"],
            "jinja": true
        },
        {
            "name": "Python: Pytest Current File",
            "type": "python",
            "request": "test",
            "cwd": "${workspaceFolder}"
        }
    ]
}
